<h3>お問い合わせページ</h3>
<%= form_for @request do |f| %>

  <div class="field">
    <%= f.label :種類  %>
    <%= f.select :purpose, 
    [["選手追加要望", "選手追加要望"], 
    ["YouTube掲載要望", "YouTube掲載要望"], 
    ["その他", "その他"]], include_blank: "選択して下さい" %>
  </div>

  <div class="field">
    <%= f.label :入力欄  %>
    <%= f.text_area :body, :size => "30x5" %>
  </div>

  <%= f.submit "投稿する" %>
<% end %>

<%= link_to "トップページに戻る", players_path %>

<% if user_signed_in? %>
  <% if current_user == @user || current_user.admin? %>
  <%= link_to "問い合わせ一覧", request_path(request) %>
  <% end %>
<% end %>

