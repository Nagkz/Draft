<h2>検索結果</h2>

<table class="table table-hover table-inverse">
  <% if @range == "Name" %>
    <tbody>
      <% @players.each do |t| %>
        <tr>
        <td><%= t.name %></td>
        <td><%= t.furigana %></td>
        <td><%= t.category %></td>
        <td><%= t.belong %></td>
        <td><%= t.league %></td>
        <td><%= t.throws %></td>
        <td><%= t.bats %></td>
        <td><%= t.height %></td>
        <td><%= t.weight %></td>
        <td><%= t.birthday %></td>
        <td><%= t.prefecture %></td>
        <td><%= t.career %></td>
        <td><%= t.explanation %></td>
        <td><%= t.summarytext %></td>
        <td><%= t.injury %></td>
        <td><%= t.max %></td>
        <td><%= t.powerful %></td>
        <td><%= t.control %></td>
        <td><%= t.stamina %></td>
        <td><%= t.breaking %></td>
        <td><%= t.meet %></td>
